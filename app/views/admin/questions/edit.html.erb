<%= form_with model: @question, url: action_name == 'new' ? admin_test_questions_path(@test) : admin_test_question_path(@test, @question), local: true do |form| %>
  <div class="form-group">
    <%= form.label :question_text, '質問内容' %>
    <%= form.text_area :question_text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.check_box :reverse_score, class: 'form-check-input' %>
    <%= form.label :reverse_score, '点数を反転にする（当てはまらない場合に点数が高くなる場合）' %>
  </div>
  <%= form.submit '保存', class: 'btn btn-primary' %>
<% end %>