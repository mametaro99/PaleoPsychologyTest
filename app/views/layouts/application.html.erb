<!DOCTYPE html>
<html>
  <head>
    <title>Railsapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body>
    <header class="navbar">
      <div class="container">
        <h1 class="app-title"><%= link_to '心理テスト成長記録', tests_path %><a href="/"></a></h1>
        <nav class="nav-links">
          <% if user_signed_in? %>
            <%= link_to 'ユーザ編集', edit_user_registration_path, class: 'nav-link' %>
            <%= link_to 'ログアウト', destroy_user_session_path, data: { "turbo-method": :delete }, class: 'nav-link' %>
          <% else %>
            <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
            <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
          <% end %>
        </nav>
      </div>
    </header>

    <div class="content">
      <% if flash[:notice] %>
        <div class="flash-message flash-notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash-message flash-alert">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
